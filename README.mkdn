# NAME

Yancy - A simple framework and editor for content-driven Mojolicious websites

# VERSION

version 1.049

# SYNOPSIS

    use Mojolicious::Lite;
    use Mojo::Pg; # Supported backends: Pg, MySQL, SQLite, DBIx::Class
    plugin Yancy => {
        backend => { Pg => Mojo::Pg->new( 'postgres:///myapp' ) },
        read_schema => 1,
    };

# DESCRIPTION

