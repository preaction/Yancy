{
  "name": "@yancyjs/editor",
  "type": "module",
  "scripts": {
    "build": "concurrently --names 'vite,tsc' \"vite build\" \"tsc -p tsconfig.iframe.json\"",
    "dev": "nodemon --exec 'npm test'",
    "check": "svelte-check --tsconfig ./tsconfig.app.json && tsc -p tsconfig.node.json",
    "pretest": "npm run build",
    "test": "vitest run && playwright test",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "test:eg": "cd eg/meet-space && npx playwright test"
  },
  "devDependencies": {
    "@iconify-json/mdi": "^1.2.3",
    "@iconify/svelte": "^5.1.0",
    "@playwright/test": "^1.56.1",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/svelte": "^5.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@tsconfig/svelte": "^5.0.5",
    "@types/json-schema": "^7.0.15",
    "@types/node": "^24.10.0",
    "@yancyjs/tap-playwright": "^0.0.5",
    "concurrently": "^9.2.1",
    "jsdom": "^27.4.0",
    "msw": "^2.12.8",
    "nodemon": "^3.1.11",
    "svelte": "^5.43.5",
    "svelte-check": "^4.3.3",
    "typescript": "~5.9.3",
    "unplugin-icons": "^22.5.0",
    "vite": "^7.2.2",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "debounce": "^3.0.0",
    "marked": "^17.0.1"
  }
}
